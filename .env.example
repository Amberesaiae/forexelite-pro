# ForexElite Pro - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SUPABASE (Database & Authentication)
# =============================================================================
# Get from: https://supabase.com/dashboard → Your Project → Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# =============================================================================
# OANDA v20 API (Forex Data & Trading)
# =============================================================================
# Get from: https://www.oanda.com/ → Practice Account → Manage API Access
OANDA_API_KEY=your_oanda_api_key_here
OANDA_ACCOUNT_ID=your_oanda_account_id_here
OANDA_ENV=practice  # practice or live

# =============================================================================
# OANDA STREAMING API (Real-time Data)
# =============================================================================
OANDA_STREAM_API_KEY=your_oanda_stream_api_key_here
OANDA_STREAM_ACCOUNT_ID=your_oanda_stream_account_id_here
OANDA_STREAM_ENV=practice  # practice or live

# =============================================================================
# UPSTASH REDIS (Caching & Rate Limiting)
# =============================================================================
# Get from: https://console.upstash.com/ → Create Database → REST API
UPSTASH_REDIS_URL=https://your-redis-db.upstash.io
UPSTASH_REDIS_TOKEN=your_upstash_token_here

# =============================================================================
# INTERACTIVE BROKERS (Optional - FIX Protocol)
# =============================================================================
# Get from: Interactive Brokers → Account Management → FIX CTCI
IBKR_FIX_HOST=127.0.0.1
IBKR_FIX_PORT=4001
IBKR_SENDER_COMP_ID=your_sender_comp_id
IBKR_TARGET_COMP_ID=your_target_comp_id
IBKR_USERNAME=your_ibkr_username
IBKR_PASSWORD=your_ibkr_password

# =============================================================================
# TRADINGVIEW (Optional - For Testing Broker API)
# =============================================================================
TRADINGVIEW_WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development  # development or production
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# =============================================================================
# DATABASE (Local PostgreSQL - Optional if using Supabase)
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/forexelite_pro

# =============================================================================
# REDIS (Local - Optional if using Upstash)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# AWS (Production Only)
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# =============================================================================
# MONITORING (Production Only)
# =============================================================================
SENTRY_DSN=your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key_here

# =============================================================================
# SECURITY
# =============================================================================
JWT_SECRET=your_jwt_secret_here_min_32_chars
ENCRYPTION_KEY=your_encryption_key_here_min_32_chars

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit .env.local to version control
# 2. Use strong, unique values for JWT_SECRET and ENCRYPTION_KEY
# 3. For production, use AWS Secrets Manager or similar
# 4. OANDA practice account is free and recommended for development
# 5. Supabase and Upstash have generous free tiers
